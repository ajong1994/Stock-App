<h2>Current Users<h2>

<table>
    <thead>
        <tr>
            <th>Client Name</th>
            <th>Client Email</th>
            <th>Client Balance</th>
            <th>Client Creation Date</th>
            <th>Client Status</th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |u| %>
            <tr> 
                <td><%= u.full_name %> </td>
                <td><%= u.email %> </td>
                <td><%= number_to_currency(u.balance) %> </td>
                <td><%= u.created_at %> </td>
                <td><%= u.registration_status %> </td>
                <td><%= link_to "Edit", edit_admin_user_path(u.id) %><td>
                <td><%= link_to "Approve", approve_admin_user_path(u.id), method: :patch  %> </td>
                <td><%= link_to "Reject", reject_admin_user_path(u.id), method: :patch  %></td>
            </tr>
        <% end %>
    </tbody>
</table>