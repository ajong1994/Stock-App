<h2>Edit <%= @user.full_name %></h2>

<%= form_with model: @user, url: admin_user_path(@user.id), method: :patch  do |f| %>

  <div class="field">
    <%= f.label :full_name, "Full Name" %><br />
    <%= f.text_field :full_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>



